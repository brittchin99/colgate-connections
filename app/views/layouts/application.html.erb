<!DOCTYPE html>
<html>
  <head>
    <title>ColgateConnections</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Colgate Connections", connections_path, :class => "navbar-brand" %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if account_signed_in? %>
          Logged in as <strong><%= current_account.email %></strong>.
          <%= link_to "Log out", destroy_account_session_path, method: :delete, :class => "btn btn-sm btn-primary"  %>
        <% else %>
          <%= link_to "Log in/Sign Up", new_account_session_path, :class => "glyphicon glyphicon-user" %>
        <% end %>
    </ul>
     
  </div>
</nav>
<br/>
      <% if flash[:notice] %>
        <div class="row">
          <div class="col-md-4 alert alert-primary notice">
            <%= "#{flash[:notice]}" %>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="row">
          <div class="col-md-4 alert alert-warning alert">
            <%= "#{flash[:alert]}" %>
          </div>
        </div>
      <% end %>
    </div>
    <%= yield %>
  
<div class="container">
    <div class="row">
        <% if account_signed_in? %>
          <div>
            <span>
              <%= "Welcome #{current_account.email}" %>
            </span>
            <% if current_account.admin %>
              <span>(admin account)</span>
            <% end %>
          </div>
        <% end %>
      </div>
</div>

</html>
