<!DOCTYPE html>
<html>
  <head>
    <title>ColgateConnections</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if account_signed_in? %>
        <div class="sidenav">
        <%= link_to "My Profile", profile_path(current_account) %>
        <a href="#clients">Search</a>
        <a href="#services">Connections</a>
        <a href="#contact">Messages</a>
        <a href="#contact">Events</a>
        <%= link_to "Log Out", destroy_account_session_path, method: :delete %>
        </div>
    <% end %>
    
    <nav class="navbar navbar-expand-lg navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to image_tag("logo_white2.png", height:60, alt:"Colgate Connections"), connections_path %>
          
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if account_signed_in? %>
            <%= link_to (current_account.first_name + " " + current_account.last_name), profile_path(current_account), :class => "subtext" %>
          <% else %>
            <%= link_to "Log In / Sign Up", new_account_session_path, :class => "subtext" %>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if flash[:notice] && !account_signed_in? %>
        <div class="alert alert-primary notice top-alert">
          <%= "#{flash[:notice]}" %>
        </div>
    <% end %>
    <% if flash[:alert] && !account_signed_in? %>
        <div class="alert alert-warning alert top-alert">
          <%= "#{flash[:alert]}" %>
        </div>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
