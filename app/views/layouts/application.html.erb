<!DOCTYPE html>
<html>
  <head>
    <title>Colgate Connections</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row" id="header">
        <div class="col-md-2">
          <%= link_to "Colgate Connections", connections_path, :class => "btn btn-sm btn-light" %>
        </div>
          <div class="col-md-2 offset-md-6">
            <%= link_to "Sign in", connections_path, :class => "btn btn-sm btn-primary" %>
            <%= link_to "Sign up", new_account_path, :class => "btn btn-sm btn-primary" %>
          </div>
      </div>
      <br/>
      <div class="row">
        
      </div>
      <br/>
      <% if flash[:notice] %>
        <div class="row">
          <div class="col-md-4 alert alert-primary notice">
            <%= "#{flash[:notice]}" %>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="row">
          <div class="col-md-4 alert alert-warning alert">
            <%= "#{flash[:alert]}" %>
          </div>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
