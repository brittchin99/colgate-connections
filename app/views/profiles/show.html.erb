<div class="profile-container">
      <!--check logged in to the right user -->
      <!--<button onclick="f()" class="update-button">Update Profile</button>-->
      <% if current_account==@profile %>
        <%= link_to "Update Profile", edit_profile_path(@profile), :class => "btn btn-primary update-button" %>
      <% end %>
      <div class="profile-basic">
            <% if @profile.avatar.attached? %>
              <img class="profile-image-circle" src="<%= (url_for(@profile.avatar)) %>">
            <% else %>
              <div class="profile-image-circle"></div>
            <% end %>
            <div class="profile-text">
                 <h4><%= "#{@profile.first_name} #{@profile.last_name}" %> </h4>
                 <p> <%= "#{@profile.pronouns}"%></p>   
                  <!--check logged in to the right user -->
                  <% if @profile.status %>
                      <%= "#{@profile.status}"%>
                  <% end %>
                  <% if current_account==@profile %>
                     <% if !@profile.status %>
                        <button onclick="toggle()" class="add-button" id="profile-status">Add a status</button>                      
                      <% end %>
                  <% end %>
                  <!--connected & message button -->
                  <div>
                    <% if current_account!=@profile && !current_account.connected_to(@profile) %>
                        <div><%= link_to "Add Connection", connections_path(:friend_id => @profile), :method => :post, :class => "btn" %></div>
                    <% end %>
                  </div>
            </div>
      </div> 
      <div>
        <table class="profile-info">
              <tr>
                <th><%= "Class of #{@profile.class_year}" %></th>
              </tr>
              <tr>
                <th>Major(s)</th>
                <td> 
                   <%= @profile.majors.gsub(/[^,^\w\s]/, '') %>
                </td>
              </tr>
              <tr>
                <th>Minor(s)</th>
                <td> <%= @profile.minors %> </td>
              </tr>
              <tr>
                <th>Interested in:</th>
                <td> <%= @profile.interests %> </td>
              </tr>
        </table>
        
      <!--check logged in to the right user -->
      <% if current_account==@profile %>
        <button onclick="f()" class="add-button">Upload profile photos</button>
      <% end %>

     <div class="photos">
            <% if @profile.photos.attached? %>
                <% @profile.photos.each do |photo| %>
                    <img class="profile-image-square" src="<%= (url_for(photo)) %>">
                <%end %>
            <% else %>
                <div class="profile-image-square"></div> 
                <div class="profile-image-square"></div> 
                <div class="profile-image-square"></div> 
            <% end %>
        
     </div>
     </div>

</div>
    
    
<script>
function toggle() {
  var x = document.getElementById("status-box");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>
