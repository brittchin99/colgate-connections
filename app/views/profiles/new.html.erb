<!DOCTYPE html>
<html>
    <body>
        <div class="center form">
            <h1>Create your profile</h1>
            <%= simple_form_for @profile, :url => url_for(:action => 'create', :controller => 'profiles'), :method => 'post' do |f| %>
                <%= f.error_notification %>
                
                <p><%= f.input :first_name, input_html: { required: true, size: 40 }%></p>
                
                <p><%= f.input :last_name, input_html: { required: true } %></p>
                
                <p><%= f.input :pronouns, as: :radio_buttons, collection: Profile::PRONOUNS %></p>
                
                <p><%= f.input :class_year, as: :radio_buttons, collection: Profile::CLASS_YEARS %></p>
                
                <p><%= f.input :majors, label: "Major(s)", collection: Profile::MAJORS, input_html: { multiple: true, required: true }, include_hidden: false %></p>
                
                <p><%= f.input :minors, label: "Minor(s)", collection: Profile::MAJORS, input_html: { multiple: true, required: true }, include_hidden: false %></p>
                
                <p><%= f.input :interests, as: :check_boxes, collection: Profile::INTERESTS, wrapper: :vertical_collection_inline, include_hidden: false %></p>
                
                <p><%= f.button :submit, class: "btn-primary" %></p>
            <% end %>
        </div>
        <% if flash[:notice] %>
              <div class="alert alert-primary notice top-alert">
                <%= "#{flash[:notice]}" %>
              </div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert alert-warning alert top-alert">
                <%= "#{flash[:alert]}" %>
              </div>
            <% end %>
    </body>
</html>